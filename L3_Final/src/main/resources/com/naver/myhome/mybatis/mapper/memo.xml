<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.myhome.mybatis.mapper.MemoMapper">
	<select id="getMemoContent" resultType="com.naver.myhome.domain.Memo">
		<!-- select memo_content from memo
		where user_id = #{userId} -->
		select * from memo
		where user_id = #{userId}
	</select>
	
	<insert id="memoInsert">
		<selectKey order="BEFORE" keyProperty="memo_id" resultType="int">
		select memo_id.nextval from dual
		</selectKey>
		<!-- insert into memo
		values(#{memo_id}, #{user_id}, #{memo_content}) -->
		insert into memo
		values(#{memo_id}, #{userId}, #{memoTxt})
	</insert>
	
	<update id="memoUpdate">
		<!-- update memo
		set memo_content = #{memo_content}
		where user_id = #{user_id} -->
		update memo
		set memo_content = #{memoTxt}
		where user_id = #{userId}
	</update>
	
	<delete id="memoDelete">
		delete from memo
		where user_id = #{userId}
	</delete>
</mapper>