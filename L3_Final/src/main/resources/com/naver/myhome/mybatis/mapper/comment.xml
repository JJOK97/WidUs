<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.myhome.mybatis.mapper.CommentMapper">
	<select id="getCommentList" resultType="com.naver.myhome.domain.Comment">
	select * from comments
	where issue_id = #{issue_id}
	order by id
</select>

	<insert id="commentAdd">
		<selectKey order="BEFORE" keyProperty="id" resultType="int">
		select comment_id.nextval from dual
		</selectKey>
<!-- 	insert into comments
	values
	(comment_id.nextval, #{issue_id}, SYSDATE,
	(select user_name from usr where user_id=#{user_id}), 
	#{comment_content}); -->
	 
	 	insert into comments
	 	values
	 	(#{id}, #{issue_id}, SYSDATE, 1, #{content})
	</insert>

	<update id="commentUpdate" parameterType="comment">
		update comments
		set content = #{content}
		where id = #{id}
	</update>
	
	<delete id="commentDelete" parameterType="int">
		delete comments
		where id = #{id}
	</delete>
</mapper>