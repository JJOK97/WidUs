<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.myhome.mybatis.mapper.DocumentsMapper">
  <resultMap id="DocumentsResultMap" type="com.naver.myhome.domain.Documents">
        <result column="filesize" property="filesize"/>
        <result column="original_name" property="originalName"/>
        <result column="create_at" property="createAt"/>
        <result column="create_user" property="createUser"/>
    </resultMap>

	<select id="getDocumentDetails" resultMap="DocumentsResultMap">
    	SELECT i.filesize, i.original_name, f.create_at, f.create_user 
    	FROM issue i, file f 
    	WHERE i.file_id = f.id
	</select>
</mapper>
