<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.myhome.mybatis.mapper.UserMapper">

	<!-- 지니 -->
	
	<!-- /지니 -->
	
	<select id="isId" resultType="user" parameterType="String"><!-- Member class를 
			별칭 -->
		select * from user where id = #{id}
	</select>
	
	<select id="isEmail" resultType="user" parameterType="String"><!-- Member class를 
			별칭 -->
		select * from users where  email = #{user_email}
	</select>

	<insert id="insert" parameterType="user">
		insert into users
		(id,email,password,name,company_invited)
		values
		(user_id.nextval,#{email},#{password},#{name},1)
	</insert>
	
	<update id="update" parameterType="user">
		update user
		set name =
		#{name}, age = #{age},
		gender = #{gender}, email = #{email}
		where id =
		#{id}
	</update>

	<select id="getSearchListCount" parameterType="map"
		resultType="int">
		select count(*)
		from user
		where id !='admin'
		<include refid="search_" />
	</select>
	

	
		<sql id="search_">
		<if test="search_field != null">
		and
			<choose>
				<when test='search_field=="user_name"'>user_name</when>
				<when test='search_field=="user_email"'>user_email</when>
				<when test='search_field=="department"'>department</when>
				<when test='search_field=="position"'>position</when>
			</choose>
		like #{search_word}
		</if>
	</sql>

	<delete id="delete" parameterType="String">
		delete from user
		where id =#{id}
	</delete>
	
	
</mapper>