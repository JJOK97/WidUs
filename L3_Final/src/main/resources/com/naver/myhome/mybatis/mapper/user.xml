<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.myhome.mybatis.mapper.UserMapper">

	<!-- 지니 -->
	<select id="finduser" resultType="user">
		select u.user_photo, u.user_name, u.user_email, u.user_create
		from usr u
		left join employee e on u.user_id = e.user_id
		where u.company_invited = #{company_invited} and u.user_status = 0
		</select>
	    

	    <!--  
	    SELECT u.user_photo, u.user_name, u.user_photo, sysdate
		FROM usr u
		WHERE u.user_id NOT IN (
   		 SELECT e.user_id
    	FROM employee e
    	WHERE e.company_invited = '1' // 여기에서 '0' 대신 '1'로 변경
		);
		
		company_invited 로 묶을떄
		select u.user_photo, u.user_name, u.user_email, u.user_create
		from usr u
		inner join employee e on u.company_invited = e.company_invited
	    where e.company_invited = #{e.company_invited}
	    and u.user_status = 0;
-->
	
	
	<select id="countuser" resultType="int">
	select count(*) as usercount
	from usr u
	left join employee e on u.user_id = e.user_id
	where u.company_invited = #{company_invited} and u.user_status = 0
	</select>
	<!-- /지니 -->
	<select id="isId" resultType="user" parameterType="String"><!-- Member class를 
			별칭 -->
		select * from user where id = #{id}
	</select>

	<insert id="insert" parameterType="user">
		insert into user
		values
		(#{id},#{password},#{name},#{age},#{gender},#{email})
	</insert>
	
	<update id="update" parameterType="user">
		update user
		set name =
		#{name}, age = #{age},
		gender = #{gender}, email = #{email}
		where id =
		#{id}
	</update>

	<select id="getSearchListCount" parameterType="map"
		resultType="int">
		select count(*)
		from user
		where id !='admin'
		<include refid="search_" />
	</select>
	
	<select id="getSearchList" parameterType="map"
		resultType="user">
		select *
		from (select rownum rnum, b.*
		from (select *
		from user
		where id != 'admin'
		<include refid="search_" />
		order by id
		) b
		where rownum &lt;= #{end}
		)
		where rnum between #{start} and #{end}
		<!-- where rnum &gt;= #{start} and rnum &lt;= #{end} -->
	</select>
	
	<sql id="search_">
		<if test='search_field != null'>
			and
			<choose>
				<when test='search_field=="id"'>id</when>
				<when test='search_field=="name"'>name</when>
				<when test='search_field=="age"'>age</when>
				<when test='search_field=="gender"'>gender</when>
			</choose>
			like #{search_word}
		</if>
	</sql>

	<delete id="delete" parameterType="String">
		delete from user
		where id =#{id}
	</delete>
</mapper>